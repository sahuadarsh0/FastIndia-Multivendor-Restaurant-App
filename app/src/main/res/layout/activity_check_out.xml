<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/order_back"
    tools:context=".CheckOut">

    <TextView
        android:id="@+id/text_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/location_back"
        android:drawableStart="@drawable/ic_location"
        android:drawablePadding="10dp"
        android:maxLines="1"
        android:paddingVertical="10dp"
        android:paddingStart="10dp"
        android:text="B-75 Krishna Vihar Koni Bilaspur"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/chat"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_chat"
        app:layout_constraintBottom_toBottomOf="@+id/text_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_address"
        app:layout_constraintTop_toTopOf="@+id/text_address" />

    <TextView
        android:id="@+id/textView8"
        style="@style/TextYellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="You are buying from"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_address" />

    <com.jackandphantom.circularimageview.RoundedImage
        android:id="@+id/vendor_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/order_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:rounded_radius="22" />

    <TextView
        android:id="@+id/vendor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Name"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/vendor_image"
        app:layout_constraintTop_toTopOf="@+id/vendor_image" />

    <TextView
        android:id="@+id/vendor_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Mobile"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/vendor_name"
        app:layout_constraintTop_toBottomOf="@+id/vendor_name" />

    <TextView
        android:id="@+id/vendor_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Address"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/vendor_mobile"
        app:layout_constraintTop_toBottomOf="@+id/vendor_mobile" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/home_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vendor_image"
        app:layout_constraintVertical_bias="0.98" />


    <TextView
        android:id="@+id/textView29"
        style="@style/TextBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Delivery Address"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view" />


    <TextView
        android:id="@+id/change"
        style="@style/TextRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="Change"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView29"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView29" />

    <EditText
        android:id="@+id/address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:drawablePadding="10dp"
        android:gravity="start"
        android:hint="Address"
        android:inputType="textPersonName"
        android:paddingVertical="10dp"
        android:paddingStart="10dp"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@+id/change"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView29" />

    <EditText
        android:id="@+id/landmark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawablePadding="10dp"
        android:gravity="start"
        android:hint="Landmark"
        android:inputType="textPersonName"
        android:paddingVertical="10dp"
        android:paddingStart="10dp"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@+id/change"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/address"
        app:layout_constraintTop_toBottomOf="@+id/address" />


    <TextView
        android:id="@+id/textView129"
        style="@style/TextBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="Select from your saved locations"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/landmark" />


    <TextView
        android:id="@+id/home"
        style="@style/TextBlack"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/yellow_back"
        android:gravity="center"
        android:paddingHorizontal="2dp"
        android:paddingVertical="10dp"
        android:text="Home"
        android:textSize="13sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toStartOf="@+id/work"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView129"
        app:layout_constraintWidth_percent=".25" />

    <TextView
        android:id="@+id/other"
        style="@style/TextBlack"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:background="@drawable/yellow_back"
        android:gravity="center"
        android:paddingHorizontal="2dp"
        android:paddingVertical="10dp"
        android:text="Other"
        android:textSize="13sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/work"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/work"
        app:layout_constraintTop_toTopOf="@+id/work"
        app:layout_constraintWidth_percent=".25" />

    <TextView
        android:id="@+id/work"
        style="@style/TextBlack"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:background="@drawable/yellow_back"
        android:gravity="center"
        android:paddingHorizontal="2dp"
        android:paddingVertical="10dp"
        android:text="Work"
        android:textSize="13sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/home"
        app:layout_constraintEnd_toStartOf="@+id/other"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/home"
        app:layout_constraintTop_toTopOf="@+id/home"
        app:layout_constraintWidth_percent=".25" />

    <Button
        android:id="@+id/order_now"
        style="@style/ButtonStyle.large.green"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="Pay Now"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/work"
        app:layout_constraintWidth_percent=".5" />

    <TextView
        android:id="@+id/textView119"
        style="@style/TextBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status of Extra Items will be updated by the shopkeeper"
        android:textSize="13sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_now" />


    <View
        android:id="@+id/view7"
        android:layout_width="0dp"
        android:layout_height="0.1dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView119" />

</androidx.constraintlayout.widget.ConstraintLayout>